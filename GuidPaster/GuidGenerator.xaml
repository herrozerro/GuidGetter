<Window x:Class="GuidPaster.GuidGenerator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuidPaster"
        mc:Ignorable="d"
        Title="Guid Paster" Height="109" Width="346" Topmost="True" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="txtGuid" Margin="0,9,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300" TextAlignment="Center"/>
        <Button x:Name="btnGetGuid" Content="Get Guid" HorizontalAlignment="Left" Margin="50,32,0,0" VerticalAlignment="Top" Width="118" Click="btnGetGuid_Click"/>
        <Button x:Name="btnCopyGuid" Content="Copy Guid" Margin="178,32,0,0" VerticalAlignment="Top" Click="btnCopyGuid_Click" HorizontalAlignment="Left" Width="118"/>

    </Grid>
</Window>
