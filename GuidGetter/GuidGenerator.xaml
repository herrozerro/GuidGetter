<Window x:Class="GuidGetter.GuidGenerator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuidGetter"
        mc:Ignorable="d"
        Title="Guid Getter" Height="109" Width="346" Topmost="True" ResizeMode="NoResize" Icon="/Icons/rolling-dices.png">
    <Grid>
        <TextBox x:Name="txtGuid" Margin="0,9,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300" TextAlignment="Center"/>
        <Button x:Name="btnGetGuid" Content="Get Guid" HorizontalAlignment="Right" Margin="0,32,233,0" VerticalAlignment="Top" Width="90" Click="btnGetGuid_Click"/>
        <Button x:Name="btnCopyGuid" Content="Copy Guid" Margin="0,32,0,0" VerticalAlignment="Top" Click="btnCopyGuid_Click" HorizontalAlignment="Center" Width="90"/>
        <Button x:Name="btnBlankGuid" Content="Blank Guid" Margin="233,32,0,0" VerticalAlignment="Top" Click="btnBlankGuid_Click" HorizontalAlignment="Left" Width="90"/>

    </Grid>
</Window>
